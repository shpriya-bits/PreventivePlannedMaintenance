<div align="right" style="padding-left:40%">
    <select id="select">
        <option></option>
        <option>Id</option>
        <option>DefectId</option>
        <option>EquipmentId</option>
        <option>Description</option>
        <option>Status</option>
    </select>
</div>
<style>
    #tooltip {
        position: absolute;
        z-index: 1001;
        display: none;
        border: 2px solid #ebebeb;
        border-radius: 5px;
        padding: 10px;
        background-color: #fff;
    }
</style>
<div>
    <table id="table_id" class="table table-striped table-bordered">
        <thead style="color: black">
            <tr style="text-align:center">
                <th style="background-color:white; width:auto">
                    Id
                </th>
                <th style="background-color:white; width:auto">
                    DefectId
                </th>
                <th style="background-color:white; width:auto">
                    Description
                </th>
                <th style="background-color:white; width:auto">
                    EquipmentId
                </th>
                <th>Date Of Occurance</th>
                <th style="background-color:white; width:auto">
                    Initial Estimated Date Of Completion
                </th>

                <th style="background-color:white; width:auto">
                    Revised Estimated Date Of Completion
                </th>
                <th>Edit</th>
        </thead>
    </table>
</div>

<script type="text/javascript">
    var table = $('#table_id').DataTable({
            "processing": true,
            "serverSide": true,
            "orderMulti": false,
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            "ajax": {
                "url": '../Defect/LoadData',
                "type": 'POST',
                "data": function (d) { d.col = document.querySelector('#select').selectedIndex; },
                "datatype": 'json'
            },
            "columns": [
                { 'data': 'tranx_Id', 'name': 'tranx_Id' },
                { 'data': 'defectId', 'name': 'defectId' },
                { 'data': 'description', 'name': 'description' },
                { 'data': 'equipmentPartId', 'name': 'equipmentPartId' },
                { 'data': 'dateOfOccurance', 'name': 'dateOfOccurance' },
                { 'data': 'operationalStatus', 'name': 'operationalStatus' },
                { 'data': 'initialEstimateDateOfCompletion', 'name': 'initialEstimateDateOfCompletion' },
                { 'data': 'revisedEstimateDateOfCompletion', 'name': 'revisedEstimateDateOfCompletion' },
                {
                    'data': null,
                    'render': function (data) {
                        return '<a href="#" class="glyphicon glyphicon-pencil edit-btn" id="' + data.tranx_Id + '"></button>';
                    }, "orderable": false
                }
            ],
            'dom': 'lBfrtip',
            'buttons': ["excelHtml5", "pdfHtml5"],
            "language": {
                "emptyTable": "No data available"
            }
        });

        $('#table_id tbody').on('click', '.edit-btn', function () {
            var data_row = table.row($(this).closest('tr')).data();
            $('#myModal1').on('shown.bs.modal', function () {
                $('#DefectId').val(data_row.defectId);
                $('#Description').val(data_row.description);
                $('#EquipmentPartId').val(data_row.equipmentPartId);
                $('#DOO').val(data_row.dateOfOccurance);
                $('#Status').val(data_row.operationalStatus);
                $('#IEDC').val(data_row.initialEstimateDateOfCompletion);
                $('#REDC').val(data_row.revisedEstimateDateOfCompletion);
            });
            $('#myModal1').modal({ show: true });

        });

        $('#select').change(function () {
            var i = $('#select').val();//document.querySelector('#select').val;
            table.draw();
        });

</script>
